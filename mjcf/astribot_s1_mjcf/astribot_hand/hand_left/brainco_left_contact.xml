<mujocoinclude>
    <contact>
        <!-- filter the palm from all other finger bodies except the tips -->
        <exclude body1="left_base_link" body2="left_thumb_metacarpal_link"/>
        <exclude body1="left_base_link" body2="left_thumb_proximal_link"/>
        <exclude body1="left_base_link" body2="left_index_proximal_link"/>
        <exclude body1="left_base_link" body2="left_middle_proximal_link"/>
        <exclude body1="left_base_link" body2="left_ring_proximal_link"/>
        <exclude body1="left_base_link" body2="left_pinky_proximal_link"/>
        <!-- <exclude body1="left_thumb_metacarpal_link" body2="left_thumb_proximal_link"/>-->
        <!-- <exclude body1="left_thumb_proximal_link" body2="left_thumb_distal_link"/>-->
    </contact>

      <!-- 新增关节角度约束 -->
  <equality>
    <!-- 食指约束: distal = proximal * 1.1 -->
    <joint joint1="left_index_proximal_joint" joint2="left_index_distal_joint" polycoef="0 1.1 0 0"/>

    <!-- 中指约束: distal = proximal * 1.1 -->
    <joint joint1="left_middle_proximal_joint" joint2="left_middle_distal_joint" polycoef="0 1.1 0 0"/>

    <!-- 无名指约束: distal = proximal * 1.1 -->
    <joint joint1="left_ring_proximal_joint" joint2="left_ring_distal_joint" polycoef="0 1.1 0 0"/>

    <!-- 小指约束: distal = proximal * 1.1 -->
    <joint joint1="left_pinky_proximal_joint" joint2="left_pinky_distal_joint" polycoef="0 1.1 0 0"/>

    <!-- 拇指约束: distal = proximal * 1.1 -->
    <joint joint1="left_thumb_proximal_joint" joint2="left_thumb_distal_joint" polycoef="0 1.1 0 0"/>

    <joint joint1="astribot_gripper_left_joint_L1" joint2="left_thumb_proximal_joint" polycoef="0 1.0 0 0"/>
    <joint joint1="left_thumb_proximal_joint" joint2="left_index_proximal_joint" polycoef="0 1.0 0 0"/>
    
    <joint joint1="left_index_proximal_joint" joint2="left_middle_proximal_joint" />
    <joint joint1="left_middle_proximal_joint" joint2="left_ring_proximal_joint" />
    <joint joint1="left_ring_proximal_joint" joint2="left_pinky_proximal_joint" />

  </equality>
  
  </mujocoinclude>
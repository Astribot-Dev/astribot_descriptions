<mujoco model="astribot_s1">
    <compiler angle="radian"/>

    <option impratio="100" integrator="implicit" timestep="0.005" viscosity="0.1" gravity="0 0 -9.81"/>

    <asset>
        <texture type="2d" name="groundplane" builtin="checker" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3" width="500" height="500"/>
        <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
    </asset>

    <include file="assets/astribot_s1_asset_for_gripper.xml"/>
    <include file="simpleTable/simpleTable_asset.xml"/>

    <worldbody>
        <include file="simpleTable/simpleTable_body.xml"/>

        <body name="box_red" pos="0.7 0.1 0.8">
                <joint type="free"/>
                <geom type="box" size="0.02 0.02 0.02" rgba="1.0 0.0 0.0 1" friction="1.0 1.0 1.0" mass="0.5" contype="1" conaffinity="1"/>  
        </body>


        <light pos="0 0 2.0" dir="0 0 -1" directional="true"/>
        <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>
        <camera pos="2.107 0.011 1.6" xyaxes="-0.001 1.000 0.000 -0.277 -0.000 0.961"/>

        <body name="chassis_base" pos="-0.0 0.0 0.097">
            <joint name="astribot_chassis_x" type="slide" axis="1 0 0" limited="false"  range="-0.001 0.001"/>
            <joint name="astribot_chassis_y" type="slide" axis="0 1 0" limited="false" range="-0.001 0.001"/>
            <joint name="astribot_chassis_zrot" type="hinge" axis="0 0 1" limited="false" range="-0.001 0.001"/>

            <include file="model_with_effector/astribot_s1_model_with_gripper.xml"/>
        </body>

        <!-- <include file="astribot_s1_endpoint_body.xml"/> -->
    </worldbody>
    
    <include file="actuators/astribot_s1_actuator_for_gripper.xml"/>
</mujoco>
